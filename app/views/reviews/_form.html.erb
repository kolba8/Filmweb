<% if @review %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@review.errors.count, "error") %> prohibited
        this review from being saved:
      </h2>

      <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<%= form_for [@film, @review || Review.new(film_id: @film.id)] do |f| %>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :surname %>
    <%= f.text_field :surname %>
  </p>

  <p>
    <%= f.label :rating %>
    <%= f.radio_button :rating, 1 %> 1
    <%= f.radio_button :rating, 2 %> 2
    <%= f.radio_button :rating, 3 %> 3
    <%= f.radio_button :rating, 4 %> 4
    <%= f.radio_button :rating, 5 %> 5
    <%= f.radio_button :rating, 6 %> 6
    <%= f.radio_button :rating, 7 %> 7
    <%= f.radio_button :rating, 8 %> 8
    <%= f.radio_button :rating, 9 %> 9
    <%= f.radio_button :rating, 10 %> 10
  </p>

  <p>
    <%= f.label :short_opinion %>
    <%= f.text_field :short_opinion %>
  </p>

  <p>
    <%= f.submit %>
    <% end %>

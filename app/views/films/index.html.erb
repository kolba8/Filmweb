<%= link_to "Homepage", root_path %> |

<%= link_to "Add film", new_film_path %>


<h1> Films </h1>

<% @films.each do |film| %>
  <div>
    <p>
      <strong> Title:</strong>
      <%= film.title %> [


      <%= link_to "Show details", film_path(film) %> |
      <%= link_to "Edit", edit_film_path(film) %> |
      <%= link_to "Delete", film_path(film),
                            method: :delete,
                            data: {confirm: "Are you sure?"}%> ]
      <p></p>
      <strong> Genre:</strong>
      <%= film.genre %>
      <strong> Year:</strong>
      <%= film.release_date %>
      <strong> Country:</strong>
      <%= film.country %>


    </p>
  </div>
<% end %>
